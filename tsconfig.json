{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "rootDir": "src",
        "outDir": "dist",
        "types": ["node", "jest"],
        "lib": ["ES2022", "dom"],
        "noImplicitAny": true,
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
